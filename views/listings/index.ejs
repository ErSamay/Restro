<% layout("/layouts/boilerplate.ejs") %>


<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-3">
    <% for(item of allItems){ %>
        <a href="/items/<%= item._id %>">
            <div class="card" style="width: 20rem;">
                <img src="<%= item.image.url %>" class="card-img-top" alt="listing_image" style="width: 18rem; height: 18rem;">
                <div class="card-img-overlay">
                   
                </div>
                <div class="card-body">
                    <p class="card-text"><b><%= item.title %> </b></p>
                    <p class="card-text"><%= item.description %> </p>
                    <p class="card-text">&#x20B9;<%= item.price.toLocaleString("en-IN") %></p>
                </div>
              </div>
        </a>
      
        
      <% } %>
</div>





